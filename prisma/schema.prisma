generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleUser {
  CUSTOMER
  ADMIN
}

enum TypeSeat {
  ECONOMY
  BUSINESS
  FIRST
}

enum StatusTicket {
  PENDING
  SUCCESS
  FAILED
}

enum FlightStatus {
  SCHEDULED
  DELAYED
  CANCELLED
}

enum RefundType {
  RESCHEDULE
  REFUND
}

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  passport      String?
  role          RoleUser
  tickets       Ticket[]
  sessions      Session[]
  packageOrders PackageOrder[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Airplane {
  id     String   @id @default(cuid())
  code   String   @default("ABC-123")
  name   String
  image  String
  flight Flight[]
}

model Flight {
  id                  String       @id @default(cuid())
  planeId             String
  plane               Airplane     @relation(fields: [planeId], references: [id])
  departureDate       DateTime
  departureCity       String
  departureCityCode   String
  arrivalDate         DateTime
  destinationCity     String
  destinationCityCode String
  price               Int
  priceEconomy       Int    @default(0)
  priceBusiness      Int    @default(0)
  priceFirst         Int    @default(0)
  status              FlightStatus @default(SCHEDULED)
  seats               FlightSeat[]
  tickets             Ticket[]
}

model FlightSeat {
  id           String    @id @default(cuid())
  flightId     String
  flight       Flight    @relation(fields: [flightId], references: [id])
  seatNumber   String
  isBooked     Boolean?  @default(false)
  type         TypeSeat
  ticket       Ticket?
  
  // Seat Hold System
  holdUntil    DateTime? // When the hold expires
  heldByUserId String?   // User who is holding this seat
}

model Ticket {
  id            String       @id @default(cuid())
  code          String       @unique
  flightId      String
  flight        Flight       @relation(fields: [flightId], references: [id])
  customerId    String
  customer      User         @relation(fields: [customerId], references: [id])
  seatId        String       @unique
  seat          FlightSeat   @relation(fields: [seatId], references: [id])
  bookingDate   DateTime
  price         BigInt
  status        StatusTicket
  tokenMidtrans String?
  
  // Relations for new features
  passengerId   String?      @unique
  passenger     Passenger?   @relation(fields: [passengerId], references: [id])
  promoCodeId   String?
  promoCode     PromoCode?   @relation(fields: [promoCodeId], references: [id])
  refundRequests RefundRequest[]
  addons        TicketAddon[]
}

model Passenger {
  id        String  @id @default(cuid())
  name      String
  passport  String?
  ticket    Ticket?
}

model PromoCode {
  id        String   @id @default(cuid())
  code      String   @unique
  discount   Int      @default(0)
  isActive   Boolean  @default(true)
  validUntil DateTime?
  tickets    Ticket[]
}

model RefundRequest {
  id          String       @id @default(cuid())
  ticketId    String
  ticket      Ticket       @relation(fields: [ticketId], references: [id])
  type        RefundType
  reason      String
  status      RefundStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model BestSelective {
  id        String   @id @default(cuid())
  title     String
  subtitle  String
  image     String
  url       String?
}

model FlightAddon {
  id          String   @id @default(cuid())
  code        String   @unique
  title       String
  description String?
  price       Int      @default(0)
  tickets     TicketAddon[]
}

model TicketAddon {
  id            String       @id @default(cuid())
  ticketId      String
  ticket        Ticket       @relation(fields: [ticketId], references: [id])
  flightAddonId String
  flightAddon   FlightAddon  @relation(fields: [flightAddonId], references: [id])
  requestDetail String? // e.g. "Pick me up with Toyota Alphard"
}

model FlightPackage {
  id          String         @id @default(cuid())
  title       String
  price       Int
  description String
  image       String
  features    String[]
  orders      PackageOrder[]
}

enum PackageOrderStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

model PackageOrder {
  id            String             @id @default(cuid())
  code          String             @unique
  packageId     String
  package       FlightPackage      @relation(fields: [packageId], references: [id])
  customerId    String
  customer      User               @relation(fields: [customerId], references: [id])
  quantity      Int                @default(1)
  totalPrice    BigInt
  status        PackageOrderStatus @default(PENDING)
  tokenMidtrans String?
  orderDate     DateTime           @default(now())
  notes         String?
}
